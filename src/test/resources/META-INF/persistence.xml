<?xml version="1.0" encoding="UTF-8" ?>
<persistence
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">

    <persistence-unit name="sync-test">
        <description>
            EveKit Sync Unit Test persistence unit
        </description>
        
        <class>enterprises.orbital.db.DBProperty</class>
        <class>enterprises.orbital.evekit.account.GeneralSequenceNumber</class>
        <class>enterprises.orbital.evekit.model.RefSyncTracker</class>
        <class>enterprises.orbital.evekit.model.ESIRefEndpointSyncTracker</class>

        <class>enterprises.orbital.evekit.model.RefCachedData</class>
        <class>enterprises.orbital.evekit.model.RefData</class>
        <class>enterprises.orbital.evekit.model.RefModelTypeMap</class>
        <class>enterprises.orbital.evekit.model.server.ServerStatus</class>
        <class>enterprises.orbital.evekit.model.eve.Alliance</class>
        <class>enterprises.orbital.evekit.model.eve.AllianceMemberCorporation</class>
        <class>enterprises.orbital.evekit.model.eve.CharacterKillStat</class>
        <class>enterprises.orbital.evekit.model.eve.CharacterVictoryPointStat</class>
        <class>enterprises.orbital.evekit.model.eve.ConquerableStation</class>
        <class>enterprises.orbital.evekit.model.eve.CorporationKillStat</class>
        <class>enterprises.orbital.evekit.model.eve.CorporationVictoryPointStat</class>
        <class>enterprises.orbital.evekit.model.eve.FactionKillStat</class>
        <class>enterprises.orbital.evekit.model.eve.FactionStats</class>
        <class>enterprises.orbital.evekit.model.eve.FactionVictoryPointStat</class>
        <class>enterprises.orbital.evekit.model.eve.FactionWar</class>
        <class>enterprises.orbital.evekit.model.eve.FactionWarSummary</class>
        <class>enterprises.orbital.evekit.model.eve.RequiredSkill</class>
        <class>enterprises.orbital.evekit.model.eve.SkillBonus</class>
        <class>enterprises.orbital.evekit.model.eve.SkillGroup</class>
        <class>enterprises.orbital.evekit.model.eve.SkillMember</class>
        <class>enterprises.orbital.evekit.model.map.FactionWarSystem</class>
        <class>enterprises.orbital.evekit.model.map.Sovereignty</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:mem:testdb"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="false" />
        </properties>

    </persistence-unit>

</persistence>
